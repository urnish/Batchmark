<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="Batch Marker" >

    <EditText
        android:id="@+id/etSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="35dp"
        android:textColor="@color/darked"
       android:gravity="center"
       
        android:hint="Enter The Array Size"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/rgCase"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" >
		
        <RadioButton
            android:id="@+id/rbBest"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:checked="true"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Best Case"
            android:textColor="@color/green" />

        <RadioButton
            android:id="@+id/rbAverage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Average Case"
            android:textSize="30dp"
            android:textColor="@color/green" />

        <RadioButton
            android:id="@+id/rbWorst"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Worst Case"
            android:textColor="@color/green"
            android:textSize="30dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:text="Starus Will Be Displayed."
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnArray"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="genarateArray"
        android:text="Genarate Array"
        android:textColor="@color/red"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="SortIt"
            android:text="Selection Sort"
            android:textColor="@color/darkblue"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvSelection"
            android:layout_width="wrap_content"
           android:gravity="center"
           android:textSize="25dp"
           android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btnBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/darkblue"
            android:onClick="SortIt"
            android:text="Bubble Sort" />

        <TextView
            android:id="@+id/tvBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btnMerge"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="SortIt"
            android:text="Merge Sort"
            android:textColor="@color/darkblue"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvMerge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Result"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

 </LinearLayout>